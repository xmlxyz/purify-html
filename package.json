{
	"name": "@xmlxyz/html-purify",
	"version": "0.0.4",
	"license": "Unlicense",
	"type": "module",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"main": "./dist/index.cjs",
	"files": [
		"./dist/*"
	],
	"scripts": {
		"prebuild": "yarn clean",
		"build": "tsup",
		"dev": "tsup --watch",
		"bundle": "tsc",
		"types": "tsc --noEmit --pretty",
		"test": "jest --runInBand",
		"clean": "node scripts/clean.mjs",
		"prepublish": "yarn build"
	},
	"dependencies": {
		"@charliewilco/toolkit": "^0.5.0",
		"escape-string-regexp": "5.0.0",
		"html-entities": "2.3.3",
		"htmlparser2": "^9.0.0"
	},
	"devDependencies": {
		"@types/he": "^1.1.2",
		"@types/jest": "^29.4.0",
		"@types/node": "^18.14.6",
		"arg": "^5.0.2",
		"del": "^7.0.0",
		"he": "^1.2.0",
		"jest": "^29.5.0",
		"prettier": "^2.8.8",
		"ts-jest": "^29.1.0",
		"tsup": "^7.1.0",
		"typescript": "^5.1.3"
	},
	"prettier": {
		"printWidth": 95,
		"useTabs": true,
		"bracketSpacing": true,
		"bracketSameLine": true,
		"htmlWhitespaceSensitivity": "ignore"
	},
	"tsup": {
		"dts": true,
		"minify": true,
		"splitting": true,
		"sourcemap": true,
		"entryPoints": ["src/index.ts"],
		"format": ["esm", "cjs"]
	}
}
